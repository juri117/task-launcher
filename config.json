{
    "maxLogLines": 300,
    "useDarkTheme": false,
    "profiles": [
        {
            "name": "git-bash",
            "executable": "C:/Program Files/Git/bin/bash.exe",
            "setup": [
                "export LANG=C.UTF-8"
            ]
        },
        {
            "name": "wsl",
            "executable": "wsl.exe",
            "params": [
                "-d",
                "Ubuntu"
            ],
            "setup": [
                "cd ~"
            ]
        }
    ],
    "tasks": [
        {
            "name": "test ip a",
            "cmd": "ip",
            "params": [
                "a"
            ]
        },
        {
            "name": "test ping",
            "cmd": "ping",
            "params": [
                "1.1.1.1"
            ]
        },
        {
            "name": "test ls",
            "cmd": "ls"
        },
        {
            "name": "Win: test ls in git bash",
            "profile": "git-bash",
            "cmd": "ls"
        },
        {
            "name": "sleep 20s",
            "cmd": "sleep",
            "params": [
                "20"
            ]
        },
        {
            "name": "log to file",
            "cmd": "ip",
            "params": [
                "a"
            ],
            "logToFile": true
        },
        {
            "name": "python test",
            "cmd": "python",
            "workingDirectory": "./scripts",
            "logToFile": false,
            "params": [
                "test.py"
            ]
        },
        {
            "name": "python test error",
            "cmd": "python",
            "workingDirectory": "./scripts",
            "params": [
                "test_error.py"
            ]
        },
        {
            "name": "python test big text",
            "cmd": "python",
            "workingDirectory": "./scripts",
            "params": [
                "big_text.py"
            ]
        },
        {
            "name": "python test env",
            "cmd": "python",
            "workingDirectory": "./scripts",
            "params": [
                "test_env.py"
            ],
            "env": {
                "TEST_VAR": "test ok"
            }
        },
        {
            "name": "interactive test py",
            "cmd": "python",
            "workingDirectory": "./scripts",
            "params": [
                "test_interactive.py"
            ]
        },
        {
            "name": "interactive test sh",
            "cmd": "bash",
            "workingDirectory": "./scripts",
            "params": [
                "test_input.sh"
            ]
        },
        {
            "name": "WIN release",
            "profile": "git-bash",
            "cmd": "./scripts/release.sh"
        },
        {
            "name": "LINUX release",
            "cmd": "./scripts/release.sh"
        }
    ]
}